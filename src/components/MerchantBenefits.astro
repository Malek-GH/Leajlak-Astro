  }
  .card:hover {
    @apply -translate-y-1 shadow-card_shadow shadow-black/40 duration-300 ease-out;
  }

  .card > div {
    @apply z-10 space-y-5 text-center;
  }

  .card svg {
    @apply z-10 w-12;
  }

  .card h4 {
    @apply font-bold md:text-2xl;
  }
</style>
