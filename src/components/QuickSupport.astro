---
const { lang } = Astro.props;
const content = await import(`../data/${lang}.json`);
---

<div
  class="flex flex-col md:flex-row md:items-center justify-evenly gap-y-20 md:gap-x-20 lg:gap-x-52 w-full"
>
  <div class="card">
    <div>
      <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="2 0 16 20"
        ><style>
          .a {
            fill: none;
            stroke: #000;
            stroke-linecap: round;
            stroke-linejoin: round;
          }
        </style><path
          fill-rule="evenodd"
          class="a"
          d="m8 19c3.5-3.6 7-6.8 7-10.8 0-4-3.1-7.2-7-7.2-3.9 0-7 3.2-7 7.2 0 4 3.5 7.2 7 10.8z"
        ></path><path
          fill-rule="evenodd"
          class="a"
          d="m8 11c1.7 0 3-1.3 3-3 0-1.7-1.3-3-3-3-1.7 0-3 1.3-3 3 0 1.7 1.3 3 3 3z"
        ></path></svg
      >
      <div>
        <h4>{content.visit_us}</h4>
        <p>{content.address}</p>
      </div>
    </div>
  </div>
  <div class="card">
    <div>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 384"
        ><path
          d="m366.793 263.086-92.265-41.348a27.35 27.35 0 0 0-25.938 2.383 9.933 9.933 0 0 0-1.094.82l-48.222 41.016a3.671 3.671 0 0 1-3.282.117c-30.996-14.961-63.105-46.875-78.125-77.441a3.733 3.733 0 0 1 0-3.281l41.153-48.829c.296-.36.569-.739.82-1.132a27.35 27.35 0 0 0 2.188-25.918l-41.055-92.11A27.35 27.35 0 0 0 92.535.996 105.937 105.937 0 0 0 .406 106.25c0 152.93 124.415 277.344 277.344 277.344a105.958 105.958 0 0 0 105.254-92.129 27.342 27.342 0 0 0-16.211-28.379Zm-89.043 97.07c-140 0-253.906-113.906-253.906-253.906a82.48 82.48 0 0 1 71.621-82.031h.45a3.906 3.906 0 0 1 3.593 2.558l41.211 92.012a3.91 3.91 0 0 1 0 3.262l-41.23 48.945a9.849 9.849 0 0 0-.84 1.113 27.345 27.345 0 0 0-1.778 26.817c17.325 35.469 53.067 70.937 88.926 88.262a27.352 27.352 0 0 0 26.895-1.954c.371-.254.742-.527 1.093-.82l48.203-41.016a3.757 3.757 0 0 1 3.126-.195l92.285 41.348a3.908 3.908 0 0 1 2.363 3.906 82.503 82.503 0 0 1-82.012 71.699Z"
        ></path></svg
      >
      <div>
        <h4>{content.call_us}</h4>
        <p>{content.phone_number}</p>
      </div>
    </div>
  </div>
  <div class="card">
    <div>
      <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 18"
        ><style>
          .a {
            fill: none;
            stroke: #000;
            stroke-linecap: round;
            stroke-linejoin: round;
          }
          .b {
            fill: none;
            stroke: #000;
            stroke-linecap: round;
          }
        </style><path
          fill-rule="evenodd"
          class="a"
          d="m2 7l6.2 4.7c1.1 0.7 2.5 0.7 3.6 0l6.2-4.7"></path><path
          fill-rule="evenodd"
          class="b"
          d="m1 7.2c0-0.7 0.4-1.4 1-1.8l7-3.9c0.6-0.3 1.4-0.3 2 0l7 3.9c0.6 0.4 1 1.1 1 1.8v7.8c0 1.1-0.9 2-2 2h-14c-1.1 0-2-0.9-2-2z"
        ></path></svg
      >
      <div>
        <h4>{content.email_us}</h4>
        <p>{content.email}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    @apply flex flex-col items-center gap-y-8 text-center md:w-1/3 md:items-start md:justify-center ltr:md:text-left rtl:md:text-right;
  }
  .card > div {
    @apply flex flex-col items-center gap-4 md:items-start;
  }

  .card div h4 {
    @apply text-xl;
  }

  .card div div {
    @apply space-y-2;
  }

  .card svg {
    @apply size-8;
  }
</style>
