<style>
  .card {
    @apply relative flex flex-col items-center justify-start gap-10 rounded-xl bg-white px-5 py-16 text-black shadow-card_shadow shadow-black/10 duration-300 ease-in will-change-transform;
  }
  .card:hover {
    @apply -translate-y-1 shadow-card_shadow shadow-black/40 duration-300 ease-out;
  }

  .card > div {
    @apply z-10 space-y-5 text-center;
  }

  .card svg {
    @apply z-10 w-12 fill-black;
  }

  .card h4 {
    @apply font-bold md:text-2xl;
  }
</style>
