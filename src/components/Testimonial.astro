---
const { quote, name, position, img_alt, active } = Astro.props;
import { Image } from "astro:assets";
import profile_pic from "../images/profile-pic/profile_pic.png";
---

<div class=`carousel-item ${active}`>
  <svg
    class="size-8 lg:size-12 mx-auto mb-3 text-primaryOrange"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="currentColor"
    viewBox="0 0 18 14">
    <path
      d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
    ></path>
  </svg>
  <blockquote>
    <p class="text-2xl md:text-3xl italic font-medium text-black">{quote}</p>
  </blockquote>
  <figure>
    <figcaption class="flex items-center justify-center mt-6 gap-x-3">
      <Image
        class="size-12 lg:size-14 rounded-full"
        src={profile_pic}
        alt={img_alt}
      />
      <div class="flex items-center">
        <cite class="pe-3 font-medium text-base lg:text-xl">{name}</cite>
        <span class="text-base lg:text-xl">|</span>
        <cite class="ps-3 text-base lg:text-lg font-light">{position}</cite>
      </div>
    </figcaption>
  </figure>
</div>
