---
import { Image } from "astro:assets";

import Layout from "../../../layouts/Layout.astro";
import cost from "../../../images/bg/cost_saving.webp";
import experience from "../../../images/bg/customer experience.webp";
import scalability from "../../../images/bg/charts.webp";
import integration from "../../../images/bg/integration.webp";
import portrait from "../../../images/profile-pic/portrait.png";
import TailoredDMS from "../../../components/SvgIcons/TailoredDMS.astro";
import RealTT from "../../../components/SvgIcons/RealTT.astro";
import Integration from "../../../components/SvgIcons/Integration.astro";
import RiderMang from "../../../components/SvgIcons/RiderMang.astro";
import LogisticPartner from "../../../components/SvgIcons/LogisticPartner.astro";
