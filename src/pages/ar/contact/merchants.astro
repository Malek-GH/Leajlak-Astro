---
import Layout from "../../../layouts/Layout.astro";
import "../../../styles/form.css";
import CheckBox from "../../../components/CheckBox.astro";
import InputCompEmail from "../../../components/InputCompEmail.astro";
import InputCompNumber from "../../../components/InputCompNumber.astro";
import InputCompText from "../../../components/InputCompText.astro";
import MerchantBenefits from "../../../components/MerchantBenefits.astro";
import merchant_bg from "../../../images/bg/register_merchants_mobile.webp";
import merchant_bg_lg from "../../../images/bg/register_merchants_lg.webp";
import SourceImageTwo from "../../../components/SourceImageTwo.astro";

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const name = data.get("contactName");
    console.log(name);
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<Layout title="اتصل بنا | التجار" lang="ar">
  <section class="flex items-center hero" id="hero">
    <div class="blurred-img bg-blurredmerchant_register">
      <SourceImageTwo
        mobileImgUrl={merchant_bg}
        desktopImgUrl={merchant_bg_lg}
        alt="merchant_contact_bg"
      />
    </div>
    <div
      class="section-container w-full z-10 fade"
      data-animation="animate-fade animate-duration-[1500ms]"
    >
      <div class="flex flex-col gap-4 text-white text-right lg:w-1/2">
        <h1 class="text-3xl md:text-4xl md:leading-tight text-white">
          انضم إلى لأجلك وزِد مبيعاتك بسرعة!
        </h1>
        <h6 class="text-base font-medium md:text-lg opacity-80">
          مع لأجلك، يستمتع التجار بالمزيد من الطلبات، وزيادة المبيعات، وظهور
          أكبر. انضم اليوم وحقق النجاح!
        </h6>
      </div>
      <div
        class="absolute z-40 left-0 top-2 3xl:top-10 lg:w-1/2 hidden lg:block"
      >
        <div class="absolute z-50 left-0">
          <div
            class="bg-white rounded-2xl shadow-xl px-10 min-w-[500px] 3xl:min-h-[600px]"
          >
            <div
              class="flex items-center justify-evenly gap-x-5 border-b-2 border-gray-100 py-8"
            >
              <!-- Contact Info -->
              <div class="stepper active relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon text-2xl font-semibold">1</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">معلومات الاتصال</p>
              </div>
              <!-- General Info -->
              <div class="stepper relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon">2</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">معلومات عامة</p>
              </div>
              <!-- Branch Info -->
              <div class="stepper relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon">3</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">معلومات الفروع</p>
              </div>
            </div>
            <form method="POST" action="" class="py-8 formStepper">
              <!-- Contact info -->
              <div class="form-elements space-y-7 active">
                <InputCompText
                  type="text"
                  id="contactName"
                  label_text="اسم جهة الاتصال"
                  data_needed={true}
                />
                <InputCompEmail
                  type="email"
                  id="contactEmail"
                  label_text="البريد الإلكتروني"
                  data_needed={true}
                />
                <InputCompNumber
                  type="number"
                  id="contactNumber"
                  label_text="رقم الهاتف"
                  data_needed={true}
                />
                <div
                  class="flex flex-col sm:flex-row items-center justify-between gap-5"
                >
                  <div>
                    <p class="text-sm font-thin">
                      يُرجى ملاحظة أن الحقول (<span class="text-red-700">*</span
                      >) إلزامية،
                    </p>
                    <p class="text-sm font-thin">والحقول العادية اختيارية.</p>
                  </div>
                  <button type="button" class="next-btn button-regular">
                    التالي
                  </button>
                </div>
              </div>
              <!-- general info -->
              <div class="form-elements space-y-7">
                <InputCompText
                  type="text"
                  id="companyName"
                  label_text="اسم الشركة"
                  data_needed={true}
                />
                <InputCompText
                  type="text"
                  id="company_website"
                  label_text="موقع الشركة"
                />
                <div class="relative space-y-2">
                  <p>نوع الصناعة <span class="text-red-700">*</span></p>
                  <CheckBox id="food1" label_text="نوع 1" />
                  <CheckBox id="food2" label_text="نوع 2" />
                  <CheckBox id="food n" label_text="نوع ن" />
                  <span
                    class="error-message-checkbox text-red-700 font-normal mt-1 hidden"
                  >
                    يُرجى اختيار نوع صناعة واحد على الأقل.
                  </span>
                </div>
                <InputCompText
                  type="text"
                  id="location_link"
                  label_text="موقع المكتب الرئيسي (رابط)"
                />
                <div class="flex flex-col gap-5 sm:flex-row justify-between">
                  <button
                    type="button"
                    class="prev-btn button-return order-2 sm:order-1"
                  >
                    عودة
                  </button>
                  <button
                    type="button"
                    class="next-btn button-regular sm:order-2"
                  >
                    التالي
                  </button>
                </div>
              </div>
              <!-- branch info -->
              <div class="form-elements space-y-7">
                <InputCompNumber
                  type="number"
                  id="branch_numbers"
                  label_text="عدد الفروع"
                  data_needed={true}
                />
                <div class="space-y-2 relative">
                  <span class="text-secondaryBlueText">
                    مناطق تقديم الخدمة <span class="text-red-700">*</span>
                  </span>
                  <CheckBox id="region 1" label_text="المنطقة 1" />
                  <CheckBox id="region 2" label_text="المنطقة 2" />
                  <CheckBox id="region 3" label_text="المنطقة 3" />
                  <span
                    class="error-message-checkbox font-normal text-red-700 mt-1 hidden"
                  >
                    يُرجى اختيار منطقة واحدة على الأقل.
                  </span>
                </div>
                <div class="space-y-2">
                  <span class="text-secondaryBlueText">
                    حجم الطلبات اليومية/ الفرع <span class="text-red-700"
                      >*</span
                    >
                  </span>
                  <select
                    name="volume"
                    id="volume"
                    class="required-select block py-4 px-1 w-full bg-white focus:border-primaryOrange/40 border-gray-400 border-b-2 focus:bg-transparent text-black duration-300 outline-0"
                    required
                  >
                    <option value="" disabled selected>اختر خيارًا</option>
                    <option value="1">نوع 1</option>
                    <option value="2">نوع 2</option>
                    <option value="3">نوع 3</option>
                  </select>
                  <span
                    class="error-message-select font-normal text-red-700 mt-1 hidden"
                  >
                    يُرجى اختيار خيار.
                  </span>
                </div>
                <div class="space-y-2">
                  <span class="text-secondaryBlueText">
                    اختر نظام نقاط البيع الخاص بك <span class="text-red-700"
                      >*</span
                    >
                  </span>
                  <select
                    name="POS"
                    id="POS"
                    class="required-select block py-4 px-1 w-full bg-white focus:border-primaryOrange/40 border-gray-400 border-b-2 focus:bg-transparent text-black duration-300 outline-0"
