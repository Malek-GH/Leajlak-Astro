---
import Layout from "../../../layouts/Layout.astro";
import { Image } from "astro:assets";
import fleet from "../../../images/bg/fleet-efficiency.webp";
import fleet_cost from "../../../images/bg/fleet-cost.webp";
import data from "../../../images/bg/data.webp";
import client from "../../../images/bg/client.webp";
import portrait from "../../../images/profile-pic/portrait.png";
import EDM from "../../../components/SvgIcons/EDM.astro";
import RTA from "../../../components/SvgIcons/RTA.astro";
import Recon from "../../../components/SvgIcons/Recon.astro";
import FMO from "../../../components/SvgIcons/FMO.astro";
import AOA from "../../../components/SvgIcons/AOA.astro";
import CDA from "../../../components/SvgIcons/CDA.astro";
