---
import CheckBox from "../../../components/CheckBox.astro";
import InputCompEmail from "../../../components/InputCompEmail.astro";
import InputCompNumber from "../../../components/InputCompNumber.astro";
import InputCompText from "../../../components/InputCompText.astro";
import MerchantBenefits from "../../../components/MerchantBenefits.astro";
import Layout from "../../../layouts/Layout.astro";
---

<Layout title="Registartion | Merchants" lang="en">
  <section
    class="relative bg-register_merchants_med 3xl:bg-register_merchants_lg bg-no-repeat bg-cover bg-left-top flex items-center justify-center hero after:bg-black/70 after:xs:bg-transparent after:xs:bg-gradient-to-l from-black/30 from-0% to-black/80 to-80% after:size-full after:absolute after:z-0"
    id="hero"
  >
    <div
      class="container section-container flex flex-col items-center lg:flex-row z-10 fade"
      data-animation="animate-fade animate-duration-[1500ms]"
    >
      <div class="flex flex-col gap-4 text-white text-left lg:w-1/2">
        <h1 class="text-3xl md:text-5xl md:leading-tight">
          Join Leajlak and grow your sales fast!
        </h1>
        <h4 class="text-base md:text-xl">
          With Leajlak merchants enjoy more orders, higher sales, and greater
          visibility. join today and thrive!
        </h4>
      </div>
      <div
        class="absolute z-40 right-0 top-2 3xl:top-10 lg:w-1/2 hidden lg:block"
      >
        <div class="absolute z-50 right-10">
          <div class="bg-white rounded-2xl shadow-xl px-10 min-h-[570px]">
            <div
              class="flex items-center justify-evenly gap-x-5 border-b-2 border-gray-100 py-8"
            >
              <!-- Contact Info -->
              <div class="stepper active relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon text-2xl font-semibold">1</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">Contact Info</p>
              </div>
              <!-- General Info -->
              <div class="stepper relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon">2</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">General Info</p>
              </div>
              <!-- Branch Info -->
              <div class="stepper relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon">3</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">Branch Info</p>
              </div>
            </div>
            <form class="py-8 formStepper">
              <!-- Contact info -->
              <div class="form-elements active space-y-7">
                <InputCompText
                  type="text"
                  id="contactName"
                  label_text="Point Of Contact Name"
                  data_needed={true}
                />
                <InputCompEmail
                  type="email"
                  id="contactEmail"
                  label_text="Contact Email"
                  data_needed={true}
                />
                <InputCompNumber
                  type="number"
                  id="contactNumber"
                  label_text="Contact Number"
                  data_needed={true}
                />
                <div
                  class="flex flex-col sm:flex-row items-center justify-between gap-5"
                >
                  <div>
                    <p class="text-sm font-thin">
                      please note that: (<span class="text-red-700">*</span>)
                      fields are mandatory,
                    </p>
                    <p class="text-sm font-thin">
                      regular fields are optional.
                    </p>
                  </div>
                  <button type="button" class="next-btn button-regular"
                    >Next</button
                  >
                </div>
              </div>
              <!-- general info -->
              <div class="form-elements space-y-7">
                <InputCompText
                  type="text"
                  id="companyName"
                  label_text="Company Name"
                  data_needed={true}
                />
                <InputCompText
                  type="text"
                  id="company_website"
                  label_text="company website"
                />
                <div class="relative space-y-2">
                  <p>Industry type <span class="text-red-700">*</span></p>
                  <CheckBox id="food1" label_text="type 1" />
                  <CheckBox id="food2" label_text="type 2" />
                  <CheckBox id="food n" label_text="type n" />
                  <p class="error-message text-red-700 font-normal mt-1 hidden">
                    Please select at least one industry type.
                  </p>
                </div>
                <InputCompText
                  type="text"
                  id="location_link"
                  label_text="Head office location (link)"
                />
                <div class="flex flex-col gap-5 sm:flex-row justify-between">
                  <button
                    type="button"
                    class="prev-btn button-return order-2 sm:order-1"
                  >
                    Return
                  </button>
                  <button
                    type="button"
                    class="next-btn button-regular sm:order-2">Next</button
                  >
                </div>
              </div>
              <!-- branch info -->
              <div class="form-elements space-y-7">
                <InputCompNumber
                  type="number"
                  id="branch_numbers"
                  label_text="Number of branches"
                  data_needed={true}
                />
                <div class="space-y-2 relative">
                  <p>
                    Service Providing Regions <span class="text-red-700">*</span
                    >
                  </p>
                  <CheckBox id="region 1" label_text="region 1" />
                  <CheckBox id="region 2" label_text="region 2" />
                  <CheckBox id="region 3" label_text="region 3" />
                  <p class="error-message font-normal text-red-700 mt-1 hidden">
                    Please select at least one region.
                  </p>
                </div>
                <div class="space-y-2">
                  <p>
                    Average Daily Order Volume/ Branch <span
                      class="text-red-700">*</span
                    >
                  </p>
                  <select
                    name="volume"
                    id="volume"
                    class="required-input border border-gray-400 text-base rounded-lg outline-0 block w-full px-2.5 py-3"
                    required
                  >
                    <option value="1">type 1</option>
                    <option value="2">type 2</option>
                    <option value="3">type 3</option>
                  </select>
                </div>
                <div class="space-y-2">
                  <p>
                    Select your POS System <span class="text-red-700">*</span>
                  </p>
                  <select
                    name="volume"
                    id="volume"
                    class="required-input border border-gray-400 text-base rounded-lg outline-0 block w-full px-2.5 py-3"
                    required
                  >
                    <option value="1">type 1</option>
                    <option value="2">type 2</option>
                    <option value="3">type 3</option>
                  </select>
                </div>
                <div class="flex justify-between">
                  <button
                    type="button"
                    class="prev-btn button-return order-2 sm:order-1"
                  >
                    Return
                  </button>
                  <button
                    type="submit"
                    class="next-btn button-regular sm:order-2">Submit</button
                  >
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div
    class="container relative mx-auto max-w-7xl lg:px-16 2xl:px-5 lg:hidden fade"
    data-animation="animate-fade animate-duration-[1000ms]"
  >
    <div class="flex flex-col items-center bg-white px-10 min-h-[570px]">
      <div
        class="flex items-center justify-evenly gap-x-5 border-b-2 border-gray-100 py-8 w-full"
      >
        <!-- Contact Info -->
        <div class="stepper active relative flex flex-col items-center">
          <div
            class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
          >
            <div class="icon text-2xl font-semibold">1</div>
            <svg class="tick w-7 h-7 hidden" viewBox="0 0 34 25" fill="none">
              <path
                d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                fill="white"></path>
            </svg>
          </div>
          <p class="mt-2 text-center">Contact Info</p>
        </div>
        <!-- General Info -->
        <div class="stepper relative flex flex-col items-center">
          <div
            class="w-12 h-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
          >
            <div class="icon text-2xl font-semibold">2</div>
            <svg class="tick w-7 h-7 hidden" viewBox="0 0 34 25" fill="none">
              <path
                d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                fill="white"></path>
            </svg>
          </div>
          <p class="mt-2 text-center">General Info</p>
        </div>
        <!-- Branch Info -->
        <div class="stepper relative flex flex-col items-center">
          <div
            class="w-12 h-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
          >
            <div class="icon text-2xl font-semibold">3</div>
            <svg class="tick w-7 h-7 hidden" viewBox="0 0 34 25" fill="none">
              <path
                d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                fill="white"></path>
            </svg>
          </div>
          <p class="mt-2 text-center">Branch Info</p>
        </div>
      </div>
      <form class="formStepper py-8 w-full">
        <!-- Contact info -->
        <div class="form-elements active space-y-7">
          <InputCompText
            type="text"
            id="contactName"
            label_text="Point Of Contact Name"
            data_needed={true}
          />
          <InputCompEmail
            type="email"
            id="contactEmail"
            label_text="Contact Email"
            data_needed={true}
          />
          <InputCompNumber
            type="number"
            id="contactNumber"
            label_text="Contact Number"
            data_needed={true}
          />
          <div
            class="flex flex-col sm:flex-row items-start justify-between gap-5"
          >
            <div>
              <p class="text-sm font-thin">
                please note that: (<span class="text-red-700">*</span>) fields
                are mandatory,
              </p>
              <p class="text-sm font-thin">regular fields are optional.</p>
            </div>
            <button type="button" class="next-btn button-regular">Next</button>
          </div>
        </div>
        <!-- general info -->
        <div class="form-elements space-y-7">
          <InputCompText
            type="text"
            id="companyName"
            label_text="Company Name"
            data_needed={true}
          />
          <InputCompText
            type="text"
            id="company_website"
            label_text="company website"
          />
          <div class="relative space-y-2">
            <p>Industry type <span class="text-red-700">*</span></p>
            <div class="checkbox-group">
              <CheckBox id="food1" label_text="type 1" />
              <CheckBox id="food2" label_text="type 2" />
              <CheckBox id="food n" label_text="type n" />
            </div>
            <p
              class="error-message-checkbox text-red-700 font-normal mt-1 hidden"
            >
              Please select at least one industry type.
            </p>
          </div>
          <InputCompText
            type="text"
            id="location_link"
            label_text="Head office location (link)"
          />
          <div class="flex flex-col gap-5 sm:flex-row justify-between">
            <button
              type="button"
              id="return"
              class="prev-btn button-return order-2 sm:order-1"
            >
              Return
            </button>
            <button type="button" class="next-btn button-regular sm:order-2"
              >Next</button
            >
          </div>
        </div>
        <!-- branch info -->
        <div class="form-elements space-y-7">
          <InputCompNumber
            type="number"
            id="branch_numbers"
            label_text="Number of branches"
            data_needed={true}
          />
          <div class="space-y-2 relative">
            <p>
              Service Providing Regions <span class="text-red-700">*</span>
            </p>
            <CheckBox id="region 1" label_text="region 1" />
            <CheckBox id="region 2" label_text="region 2" />
            <CheckBox id="region 3" label_text="region 3" />
            <p
              class="error-message-checkbox font-normal text-red-700 mt-1 hidden"
            >
              Please select at least one region.
            </p>
          </div>
          <div class="space-y-2">
            <p>
              Average Daily Order Volume/ Branch <span class="text-red-700"
                >*</span
              >
            </p>
            <select
              name="volume"
              id="volume"
              class="required-input border border-gray-400 text-base rounded-lg outline-0 block w-full px-2.5 py-3"
              required
            >
              <option value="1">type 1</option>
              <option value="2">type 2</option>
              <option value="3">type 3</option>
            </select>
          </div>
          <div class="space-y-2">
            <p>
              Select your POS System <span class="text-red-700">*</span>
            </p>
            <select
              name="volume"
              id="volume"
              class="required-input border border-gray-400 text-base rounded-lg outline-0 block w-full px-2.5 py-3"
              required
            >
              <option value="1">type 1</option>
              <option value="2">type 2</option>
              <option value="3">type 3</option>
            </select>
          </div>
          <div class="flex justify-between">
            <button
              type="button"
              id="return"
              class="prev-btn button-return order-2 sm:order-1"
            >
              Return
            </button>
            <button type="submit" class="next-btn button-regular sm:order-2"
              >Submit</button
            >
          </div>
        </div>
      </form>
    </div>
  </div>
  <section class="">
    <div class="container section-container flex flex-col gap-28">
      <div
        class="text-left space-y-4 fade"
        data-animation="animate-fade animate-duration-[1000ms]"
      >
        <h2 class="">Why work with us?</h2>
        <p class="lg:w-1/2">
          join our platform today and unlock seamless delivery management,
          increased efficiency, and unparalleled customer satisfaction become a
          part of the future of logistics.
        </p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-x-5 gap-y-10 py-5">
        <MerchantBenefits />
      </div>
    </div>
  </section>
  <script src="../../../Script/registration-control.js"></script>
</Layout>
