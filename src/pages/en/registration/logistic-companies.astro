---
import InputCompEmail from "../../../components/InputCompEmail.astro";
import InputCompNumber from "../../../components/InputCompNumber.astro";
import InputCompText from "../../../components/InputCompText.astro";
import LogisticBenfits from "../../../components/LogisticBenfits.astro";
import Layout from "../../../layouts/Layout.astro";
---

<link
  rel="preload"
  href="/images/bg/register_logistic_med.webp"
  as="image"
  media="(max-width: 1599px)"
/>
<link
  rel="preload"
  href="/images/bg/register_logistic_lg.webp"
  as="image"
  media="(min-width: 1600px)"
/>

<Layout title="Registartion | Logistic-Companies" lang="en">
  <section
    class="bg-register_logistic_med 3xl:bg-register_logistic_lg bg-no-repeat bg-cover bg-center flex items-center justify-center hero"
  >
    <div
      class="container section-container flex flex-col items-center lg:flex-row z-10 fade"
      data-animation="animate-fade animate-duration-[1500ms]"
    >
      <div class="flex flex-col gap-4 text-white text-left lg:w-2/4">
        <h1 class="text-3xl md:text-5xl md:leading-tight">
          Transform your fleet business with Leajlak.
        </h1>
        <h4 class="text-base md:text-xl">
          Manage your fleet with ease and watch your business thrive with our
          powerful platform.
        </h4>
      </div>
      <div
        class="absolute z-40 right-0 top-2 3xl:top-10 lg:w-1/2 hidden lg:block"
      >
        <div class="absolute z-50 right-10">
          <div class="bg-white rounded-2xl shadow-xl px-10 min-h-[570px]">
            <div
              class="flex items-center justify-evenly gap-x-5 border-b-2 border-gray-100 py-8"
            >
              <!-- contact info -->
              <div class="stepper active relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon">1</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>

                <p class="mt-2">Contact info</p>
              </div>
              <!-- general info -->
              <div class="stepper relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon">2</div>

                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">General info</p>
              </div>
              <!-- branch info -->
              <div class="stepper relative flex flex-col items-center">
                <div
                  class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
                >
                  <div class="icon">3</div>
                  <svg
                    class="tick size-7 hidden"
                    viewBox="0 0 34 25"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                      fill="white"></path>
                  </svg>
                </div>
                <p class="mt-2">Resources info</p>
              </div>
            </div>
            <form class="py-8 formStepper">
              <!-- Contact info -->
              <div class="form-elements active space-y-7">
                <InputCompText
                  type="text"
                  id="contactName"
                  label_text="Point Of Contact Name"
                  data_needed={true}
                />
                <InputCompEmail
                  type="email"
                  id="contactEmail"
                  label_text="Contact Email"
                  data_needed={true}
                />
                <InputCompNumber
                  type="number"
                  id="contactNumber"
                  label_text="Contact Number"
                  data_needed={true}
                />
                <div
                  class="flex flex-col sm:flex-row items-center justify-between gap-5"
                >
                  <div>
                    <p class="text-sm font-thin">
                      please note that: (<span class="text-red-700">*</span>)
                      fields are mandatory,
                    </p>
                    <p class="text-sm font-thin">
                      regular fields are optional.
                    </p>
                  </div>
                  <button type="button" class="next-btn button-regular"
                    >Next</button
                  >
                </div>
              </div>
              <!-- general info -->
              <div class="form-elements space-y-7">
                <InputCompText
                  type="text"
                  id="companyName"
                  label_text="Company Name"
                  data_needed={true}
                />
                <InputCompNumber
                  type="number"
                  id="crNumber"
                  label_text="Cr Number"
                  data_needed={true}
                />
                <InputCompText
                  type="text"
                  id="company_website"
                  label_text="company website"
                />

                <InputCompText
                  type="text"
                  id="location_link"
                  label_text="Head office location (link)"
                />

                <div class="flex flex-col gap-5 sm:flex-row justify-between">
                  <button
                    type="button"
                    class="prev-btn button-return order-2 sm:order-1"
                  >
                    Return
                  </button>
                  <button
                    type="button"
                    class="next-btn button-regular sm:order-2">Next</button
                  >
                </div>
              </div>
              <!-- branch info -->
              <div class="form-elements space-y-7">
                <InputCompNumber
                  type="number"
                  id="captain_numbers"
                  label_text="Number of captains"
                  data_needed={true}
                />
                <InputCompNumber
                  type="number"
                  id="Coverage_area"
                  label_text="Coverage area"
                  data_needed={true}
                />

                <div class="flex justify-between">
                  <button
                    type="button"
                    class="prev-btn button-return order-2 sm:order-1"
                  >
                    Return
                  </button>
                  <button
                    type="submit"
                    class="next-btn button-regular sm:order-2">Submit</button
                  >
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div
      id="hero-overlay"
      class="absolute top-0 left-0 size-full bg-black/70 xs:bg-transparent xs:bg-gradient-to-l from-black/50 to-black/70 z-0"
    >
    </div>
  </section>
  <div
    class="container relative mx-auto max-w-7xl lg:px-16 2xl:px-5 lg:hidden fade"
    data-animation="animate-fade animate-duration-[1000ms]"
  >
    <div class="flex flex-col items-center bg-white px-10 min-h-[570px]">
      <div
        class="flex items-center justify-evenly gap-x-5 border-b-2 border-gray-100 py-8 w-full"
      >
        <!-- contact info -->
        <div class="stepper active relative flex flex-col items-center">
          <div
            class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
          >
            <div class="icon">1</div>
            <svg
              class="tick size-7 hidden"
              viewBox="0 0 34 25"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                fill="white"></path>
            </svg>
          </div>

          <p class="mt-2 text-center">Contact info</p>
        </div>
        <!-- general info -->
        <div class="stepper relative flex flex-col items-center">
          <div
            class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
          >
            <div class="icon">2</div>

            <svg
              class="tick size-7 hidden"
              viewBox="0 0 34 25"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                fill="white"></path>
            </svg>
          </div>
          <p class="mt-2 text-center">General info</p>
        </div>
        <!-- branch info -->
        <div class="stepper relative flex flex-col items-center">
          <div
            class="size-12 rounded-full ring-1 ring-black/10 bg-white flex items-center justify-center"
          >
            <div class="icon">3</div>
            <svg
              class="tick size-7 hidden"
              viewBox="0 0 34 25"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M33.375 3.25021L10.875 24.2502L0.5625 14.6252L3.20625 12.1577L10.875 19.2977L30.7313 0.782715L33.375 3.25021Z"
                fill="white"></path>
            </svg>
          </div>
          <p class="mt-2 text-center">Resources info</p>
        </div>
      </div>
      <form class="py-8 formStepper w-full">
        <!-- Contact info -->
        <div class="form-elements active space-y-5">
          <InputCompText
            type="text"
            id="contactName"
            label_text="Point Of Contact Name"
            data_needed={true}
          />
          <InputCompEmail
            type="email"
            id="contactEmail"
            label_text="Contact Email"
            data_needed={true}
          />
          <InputCompNumber
            type="number"
            id="contactNumber"
            label_text="Contact Number"
            data_needed={true}
          />
          <div
            class="flex flex-col sm:flex-row items-center justify-between gap-5"
          >
            <div>
              <p class="text-sm font-thin">
                please note that: (<span class="text-red-700">*</span>) fields
                are mandatory,
              </p>
              <p class="text-sm font-thin">regular fields are optional.</p>
            </div>
            <button type="button" class="next-btn button-regular">Next</button>
          </div>
        </div>
        <!-- general info -->
        <div class="form-elements space-y-5">
          <InputCompText
            type="text"
            id="companyName"
            label_text="Company Name"
            data_needed={true}
          />
          <InputCompNumber
            type="number"
            id="crNumber"
            label_text="Cr Number"
            data_needed={true}
          />
          <InputCompText
            type="text"
            id="company_website"
            label_text="company website"
          />

          <InputCompText
            type="text"
            id="location_link"
            label_text="Head office location (link)"
          />

          <div class="flex flex-col gap-5 sm:flex-row justify-between">
            <button
              type="button"
              class="prev-btn button-return order-2 sm:order-1"
            >
              Return
            </button>
            <button type="button" class="next-btn button-regular sm:order-2"
              >Next</button
            >
          </div>
        </div>
        <!-- branch info -->
        <div class="form-elements space-y-5">
          <InputCompNumber
            type="number"
            id="captain_numbers"
            label_text="Number of captains"
            data_needed={true}
          />
          <InputCompNumber
            type="number"
            id="Coverage_area"
            label_text="Coverage area"
            data_needed={true}
          />

          <div class="flex justify-between">
            <button
              type="button"
              class="prev-btn button-return order-2 sm:order-1"
            >
              Return
            </button>
            <button type="submit" class="next-btn button-regular sm:order-2"
              >Submit</button
            >
          </div>
        </div>
      </form>
    </div>
  </div>
  <section>
    <div class="container section-container flex flex-col gap-32">
      <div
        class="fade text-left space-y-4"
        data-animation="animate-fade animate-duration-[1000ms]"
      >
        <h2 class="">Why Choose Us?</h2>
        <p class="lg:w-1/2">
          Leajlak's Order Management System empowers logistics companies to
          overcome operational hurdles, enhance efficiency, and deliver
          exceptional service to their clients and customers.
        </p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-16 lg:gap-7">
        <LogisticBenfits />
      </div>
    </div>
  </section>
  <script src="../../../Script/registration-control.js"></script>
</Layout>
